@page "/admin/auth/login"
@layout LoginLayout

<ValidateForm class="form-inline" Model="@Model" OnValidSubmit="@HandleLogin">
    <div class="row">
        <div class="form-group col-12">
            <BootstrapInput @bind-Value="@Model.UserName" />
        </div>
        <div class="form-group col-12">
            <BootstrapInput type="password" @bind-Value="@Model.Password" />
        </div>
        <div class="form-group col-12">
            <Button ButtonType="ButtonType.Submit" Text="登录" />
        </div>
    </div>
</ValidateForm>
<Button @onclick="@GetUserInfoAsync" Text="获取用户信息" />
<Message @ref="MessageElement" />
